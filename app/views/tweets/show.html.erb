<p style="color: white; background-color: green; padding: 10px; border-radius: 5px; text-align: center; font-size: 16px;">
  <%= notice %>
</p>

<!-- Mostrar el tweet -->
<%= render @tweet %>

<!-- Contenedor de botones -->
<div style="margin-top: 20px; display: flex; gap: 10px; justify-content: center;">

  <!-- Bot贸n para editar el tweet -->
  <%= link_to "Edit this tweet", edit_tweet_path(@tweet), class: "btn btn-primary" %>

  <!-- Bot贸n para volver a la lista de tweets -->
  <%= link_to "Back to tweets", tweets_path, class: "btn btn-secondary" %>

  <!-- Bot贸n para eliminar el tweet -->
  <%= button_to "Delete this tweet", @tweet, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>

</div>

